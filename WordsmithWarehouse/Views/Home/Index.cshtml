@model FrontPageViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div style="margin:0 -15px;">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="#BooksOfTheMonth"><img style="contain-intrinsic-size" class="d-block w-100" src="~/images/Banners/first banner.png" alt="First slide"></a>
            </div>
            <div class="carousel-item">
                <img style="contain-intrinsic-size" class="d-block w-100" src="~/images/Banners/second banner.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img style="contain-intrinsic-size" class="d-block w-100" src="~/images/Banners/third banner.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <hr />
    <br />
    <br />
    <div class="col-md-12">
        <h1 class="text-center" style="color:#96a2b2"> Best Sellers!</h1>
        <div class="row justify-content-center" style="margin:0px;">
            <div>
                <div class="grid-container" style="border-width:3px; border-style:solid; border-color:#96a2b2;border-right:0; border-left:0;">
                    @foreach (var item in Model.BestSellerBooks)
                    {
                        <div class="item">
                            @if (!string.IsNullOrEmpty(item.ImageURL))
                            {
                                <div class="item-content" style="margin:10px 25px 0px 25px">
                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id"><img src="@Url.Content(item.ImageURL)" alt="Image" style="width:200px;height:150px;max-width:100%;height:auto;"></a>
                                    <div class="book-title">
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" style="color:black">@Html.DisplayFor(modelItem => item.Title)</a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        <br />
        <br />
