@model TicketViewModel

@{
    ViewData["Title"] = "Create";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<div class="container contact-form" style="background: #fff;margin-top: 10%;margin-bottom: 5%;width: 70%;">
    <form asp-action="Create" style="border-radius:1rem;" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1 style=" margin-bottom: 8%;margin-top: -10%;text-align: center;color: #0062cc;">
            Contact us
        </h1>
        <p style="text-align: center;color: #0062cc;">
            You'll get a response within 24h!
        </p>
        <div class="row" style="margin-bottom: -7%;">
            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Title *" />
                </div>
                @if (!this.User.Identity.IsAuthenticated)
                {
                    <div class="form-group">
                        <input asp-for="UserEmail" type="text" class="form-control" placeholder="Your Email *" />
                    </div>
                }
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btnContact" value="Send Message" style=" width: 50%;border: none;border-radius: 1rem;padding: 1.5%;background:#0062cc;font-weight: 600;color: #fff;cursor: pointer;" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea asp-for="Description" class="form-control" placeholder="Your Message *" style="width: 100%; height: 150px;"></textarea>
                </div>
            </div>
        </div>
    </form>
</div>