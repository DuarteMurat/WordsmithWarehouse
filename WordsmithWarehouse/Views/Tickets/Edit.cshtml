@model ClassLibrary.Entities.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h1>Update Ticket</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Title" />
            <input type="hidden" asp-for="Description" />
            <input type="hidden" asp-for="Username" />
            <input type="hidden" asp-for="UserEmail" />
            <div class="col">
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Open" /> @Html.DisplayNameFor(model => model.Open)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Close" /> @Html.DisplayNameFor(model => model.Close)
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"> <i class="fa fa-save"></i> Update</button> |
                    <a asp-action="Index" class="btn btn-info"> <i class="fas fa-chevron-left"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


